---
import ServiceCard from './ServiceCard.astro';

const services = [
    {
        title: "Venta de Equipos Mirage",
        description: "Encuentre la última tecnología en climatización. Ofrecemos minisplits inverter de alta eficiencia energética para su confort y ahorro.",
        imageSrc: "/images/minisplit.webp",
        imageAlt: "Modern split air conditioner mounted on a clean wall",
        features: ["Garantía directa de fabricante", "Instalación básica incluida"],
        ctaText: "Ver Catálogo",
        icon: "storefront"
    },
    {
        title: "Reparación de Lavadoras",
        description: "Expertos en la reparación de lavadoras Whirlpool, especializándonos en modelos de reloj y sistemas análogos tradicionales.",
        imageSrc: "/images/lavadora.webp",
        imageAlt: "Close up of washing machine dial and controls",
        features: ["Refacciones originales", "Diagnóstico a domicilio"],
        ctaText: "Agendar Revisión",
        icon: "build_circle",
        imageClass: "object-top"
    },
    {
        title: "Mantenimiento de Climas",
        description: "Servicio preventivo y correctivo completo para minisplits y unidades de ventana. Limpieza profunda y carga de gas.",
        imageSrc: "/images/mantenimiento.webp",
        imageAlt: "Technician cleaning air conditioner filter with tools",
        features: ["Limpieza química profunda", "Prevención de fugas"],
        ctaText: "Solicitar Servicio",
        icon: "ac_unit"
    }
];
---

<section id="servicios" class="py-16 md:py-24 bg-white dark:bg-gray-800 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">
            ¿En qué podemos ayudarte hoy?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
            {services.map(service => (
                <ServiceCard {...service} />
            ))}
        </div>
    </div>
</section>
