---
interface Props {
    title: string;
    description: string;
    imageSrc: string;
    imageAlt: string;
    features: string[];
    ctaText: string;
    icon: string;
}

const { title, description, imageSrc, imageAlt, features, ctaText, icon } = Astro.props;
---

<div class="group relative flex flex-col bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:-translate-y-2">
    <div class="relative h-64 overflow-hidden">
        <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60"></div>
    </div>
    
    <!-- Icon Badge Overlap -->
    <div class="absolute top-56 left-6 w-14 h-14 bg-blue-600 text-white rounded-lg flex items-center justify-center shadow-lg border-4 border-white dark:border-gray-800 z-10 group-hover:bg-blue-700 transition-colors">
        <span class="material-icons-outlined text-2xl">{icon}</span>
    </div>

    <div class="p-6 pt-10 flex flex-col flex-grow">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 transition-colors">{title}</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6 flex-grow">
            {description}
        </p>
        <ul class="space-y-2 mb-6 text-sm text-gray-500 dark:text-gray-400">
            {features.map((feature) => (
                <li class="flex items-center gap-2">
                    <span class="material-icons-outlined text-blue-600 text-base">check_circle</span>
                    {feature}
                </li>
            ))}
        </ul>
        <a href="#" class="inline-flex items-center text-blue-600 font-bold hover:text-blue-700 transition-colors mt-auto">
            {ctaText}
            <span class="material-icons-outlined ml-1 text-sm group-hover:translate-x-1 transition-transform">arrow_forward</span>
        </a>
    </div>
</div>
